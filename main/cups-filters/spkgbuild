# description	: Backends and filters for CUPS
# depends	: ghostscript libppd poppler qpdf mupdf ttf-dejavu

name=cups-filters
version=2.0.0
release=1
source="$name-$version.tar.gz::https://github.com/OpenPrinting/cups-filters/archive/$version.tar.gz"

build() {
	cd $name-$version
	./autogen.sh
	CXXFLAGS="$CXXFLAGS -std=c++17"  \
	./configure \
		--prefix=/usr        \
		--sysconfdir=/etc    \
		--localstatedir=/var \
		--without-rcdir      \
		--disable-static     \
		--disable-avahi \
		--disable-dbus \
		--disable-braille \
		--without-rcdir \
		--with-browseremoteprotocols=cups
	make
	make DESTDIR=$PKG install
}
