#!/bin/sh 

SESSION=$(printf "Shutdown\\nReboot\\nLock\\nExit" | bemenu -H '20' -p 'Session:' --fn 'mononoki 11' --tf '#ffffff' --hf '#000000' --hb '#999999') 

case $SESSION in 
	"Shutdown") sudo shutdown -h now;; 
	"Reboot") sudo shutdown -r now;;
	"Lock") swaylock -i ~/.icons/fondo.jpg;;
	"Exit") swaymsg exit;; 
	*) ;; 
esac
